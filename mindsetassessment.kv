#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

<ZeroScreen>:
    start_button: start_button
    subject_id: subject_id
    name: 'zero_screen'
    Widget:
        LoggedButton:
            id: start_button
            name: 'start_button'
            background_color: 1,0,1,1
            background_normal: ''
            text: 'Start'
            font_size: 36
            size: root.width * 0.3, root.height * 0.2
            pos: root.width * 0.80 - self.width * 0.5, root.height * 0.75 - self.height * 0.5
            on_press: app.next_question()

        Label:
            text: "Subject ID:"
            size: root.width * 0.15, root.height * 0.2
            pos: root.width * 0.05 - self.width * 0.5, root.height * 0.75 - self.height * 0.5

        LoggedTextInput:
            id: subject_id
            name: 'subject_id'
            text: ''
            font_size: 36
            size: root.width * 0.5, root.height * 0.2
            pos: root.width * 0.35 - self.width * 0.5, root.height * 0.75 - self.height * 0.5

<QuestionScreen>
    name: 'question_screen'

    Widget:
        LoggedButton:
            id: A_button
            name: 'A'
            size: root.width * 0.5 * 456.0 / 1000.0, root.width * 0.5 * 570.0 / 1000.0
            pos: root.width * 0.80 - self.width * 0.5, root.height * 0.25 - self.height * 0.5
            on_press: app.pressed(self.name)
            background_normal: 'images/blue.jpg'
            background_disabled_normal: 'images/blue.jpg'
            background_disabled_down: 'images/blue_pressed.jpg'
            background_down: 'images/blue_pressed.jpg'

        LoggedButton:
            id: B_button
            name: 'B'
            size: root.width * 0.5 * 456.0 / 1000.0, root.width * 0.5 * 570.0 / 1000.0
            pos: root.width * 0.20 - self.width * 0.5, root.height * 0.25 - self.height * 0.5
            on_press: app.pressed(self.name)
            background_normal: 'images/green.jpg'
            background_disabled_normal: 'images/green.jpg'
            background_disabled_down: 'images/green_pressed.jpg'
            background_down: 'images/green_pressed.jpg'


